ifndef INSTALL_LOCATION
INSTALL_LOCATION=..
endif

all:
	@echo "Make and install EPICS/PyQt integration."
	./pyca-make.py
	./pyca-install.py --print --target=${INSTALL_LOCATION}

install:
	@echo "Install EPICS/PyQt integration."
	./pyca-install.py --print --target=${INSTALL_LOCATION}

clean:
	@echo "Clean PyQt/EPICS files."
	rm -rf build

distclean realclean: clean

